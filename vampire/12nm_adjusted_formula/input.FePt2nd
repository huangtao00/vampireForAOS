#FePt simulation
#------------------------------------------
# Creation attributes:
#------------------------------------------
#create:crystal-structure=sc
create:periodic-boundaries-x
create:periodic-boundaries-y
create:periodic-boundaries-z

create:particle
create:cylinder




#------------------------------------------
# System Dimensions:
#------------------------------------------

dimensions:unit-cell-size = 2.866 !A
dimensions:particle-size=12!nm
dimensions:system-size-x = 12.0 !nm
dimensions:system-size-y = 12.0 !nm
dimensions:system-size-z = 12.0 !nm



#------------------------------------------
# Material Files:
#------------------------------------------
material:file=FePt2nd.mat
material:unit-cell-file=UC2nd.ucf
#------------------------------------------
# Simulation attributes:
#------------------------------------------



#change to 10000 steps
sim:loop-time-steps=20000

sim:time-step=1.0E-16
#------------------------------------------
# Program and integrator details
#------------------------------------------
#sim:program=static-hysteresis-loop
sim:program=hysteresis-loop
sim:temperature=300
sim:applied-field-unit-vector=0,0,1
sim:minimum-applied-field-strength = -9 !T
sim:maximum-applied-field-strength = 9!T
sim:applied-field-strength-increment=1 !T

#change to 10000 steps
sim:equilibration-time-steps=20000



sim:integrator=llg-heun
#------------------------------------------
# Data output
#------------------------------------------
#1
output:real-time
#2
#output:temperature    
output:applied-field-strength

#3 4 5 6
output:magnetisation
output:mean-magnetisation-length
output:applied-field-unit-vector
#7


#output:anisotropy-energy
#output:Ku
#output:mean-anisotropy-energy


config:atoms
